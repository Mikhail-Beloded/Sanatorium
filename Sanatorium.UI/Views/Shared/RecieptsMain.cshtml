@using Sanatorium.BLL.DTOs;

@model List<RecieptDto>

@{
    ViewData["Title"] = "Reciepts Main Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="text-center">
    <h1 class="display-4">Квитанції</h1>
</div>

<div>
    <h1></h1>
</div>

<table class="table table-bordered table-responsive table-hover border border-0 border-dark">
    <tr>
        <th>Номер</th>
        <th>Дата формування</th>
        <th>Сума</th>
        <th>Тип</th>
        <th>Пацієнт</th>
        <th>Формувати PDF</th>
        <th>Видалити</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.Id</td>
            <td>@d.CreateDate</td>
            <td>@d.Sum</td>
            <td>@d.Type</td>
            <td>@d.Voucher.Patient.FullName</td>
            <td><a href="/Home/GenerateRecieptPDF/@d.Id.ToString()" style="width: 50px" class="btn btn-warning"><i class="fa fa-download" style="font-size:24px"></i></a></td>
            <td><a href="/Home/DeleteReciept/@d.Id.ToString()" style="width: 50px" class="btn btn-danger"><i class="fa fa-trash-o" style="font-size:24px"></i></a></td>
        </tr>
    }
</table>