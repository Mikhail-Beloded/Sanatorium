@using Sanatorium.BLL.DTOs;

@model AddVoucherModel

@{
    ViewBag.Title = "Add Voucher Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<form asp-controller="Home" asp-action="SubmitAddVoucher" method="post">
    <div class="text-center">
        <h1 class="display-4">Створити путівку</h1>
    </div>

    <div class="input-group">
        <input hidden asp-for="CreationDate" type="datetime" value="@DateTime.Now" class="form-control">
    </div>

    <div class="input-group">
        <input asp-for="ExpirationDate" type="datetime" class="form-control" placeholder="Дійсна до">
    </div>

    <label>Пацієнти</label>

    <div class="input-group">
        <select asp-for="PatientId" asp-items="ViewBag.Patients"></select>
    </div>

    <label>Кімнати</label>

    <div class="input-group">
        <select asp-for="RoomId" asp-items="ViewBag.Rooms"></select>
    </div>

    <div class="input-group">
        <input asp-for="DayCount" type="number" class="form-control" placeholder="Кількість днів проживання в кімнаті">
    </div>

    <label>Захворювання</label>

    <div class="input-group">
        <select asp-for="IllnessId" asp-items="ViewBag.Illnesses"></select>
    </div>

    <div class="input-group">
        <input asp-for="IllnessGrade" type="number" class="form-control" placeholder="Ступінь захворення">
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-dark">
            <i class="fa fa-check"></i>
        </button>
    </div>
</form>