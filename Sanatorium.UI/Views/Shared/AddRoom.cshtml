@using Sanatorium.BLL.DTOs;

@model RoomDto

@{
    ViewBag.Title = "Add Room Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<form asp-controller="Home" asp-action="SubmitAddRoom" method="post">
    <div class="text-center">
        <h1 class="display-4">Додати кімнату</h1>
    </div>

    <div class="input-group">
        <input asp-for="Price" type="number" placeholder="Ціна за добу" class="form-control">
    </div>

    <div class="input-group">
        <input asp-for="Capacity" type="number" class="form-control" placeholder="Вмістимість">
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-dark">
            <i class="fa fa-check"></i>
        </button>
    </div>
</form>