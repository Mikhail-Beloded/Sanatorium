@using Sanatorium.BLL.DTOs;

@model List<DoctorDto>

@{
    ViewData["Title"] = "Doctors Main Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="text-center">
    <h1 class="display-4">Лікарі</h1>
</div>

<div class="d-flex justify-content-end">
    <a href="/Home/AddDoctor" class="btn rounded-circle btn-dark"><i class="fa fa-plus"></i></a>
</div>

<div>
    <h1></h1>
</div>

<table class="table table-bordered table-responsive table-hover border border-0 border-dark">
    <tr>
        <th>Ім'я</th>
        <th>Дата народження</th>
        <th>Стать</th>
        <th>Номер телефону</th>
        <th>Спеціалізація</th>
        <th>Редагувати</th>
        <th>Видалити</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.FullName</td>
            <td>@d.BirthDate.ToShortDateString()</td>
            <td>@d.Gender</td>
            <td>@d.PhoneNumber</td>
            <td>@d.Specialization</td>
            <td><a href="/Home/EditDoctor/@d.Id.ToString()" style="width: 50px" class="btn btn-warning"><i class="fa fa-edit" style="font-size:24px"></i></a></td>
            <td><a href="/Home/DeleteDoctor/@d.Id.ToString()" style="width: 50px" class="btn btn-danger"><i class="fa fa-trash-o" style="font-size:24px"></i></a></td>
        </tr>
    }
</table>